<div class="d-flex flex-column align-items-center">
<h1>Project Management App</h1>

<% if user_signed_in? %>
  <h2>Welcome </h2>
<%= link_to 'Add Project',  new_project_path %>
<%= link_to 'Sign Out',   destroy_admin_session_path, method: :delete %>
<%= link_to 'Sign Out - member',    destroy_member_session_path, method: :delete %>

<% else %>
  <h3>Welcome! Enter Your Organization Subdomain</h3>
  <%= form_with url: search_organization_path, method: :get do |form| %>
    <div class="input-group w-100 ">
    <%= form.text_field :organization, class:"form-control fs-5 border-info shadow-none", placeholder:"Enter Subdomain" %>
     <button class="input-group-text btn-lg bg-info text-dark border-info" id="basic-addon1" type="submit" value="Search" class="btn btn-success fw-bold"> 
        <i class="bi bi-search bigger fs-4 " ></i>
      </button>
    </div>
  <% end %>
  
  <% if @organization %>
  <div class="my-3 bg-secondary text-light rounded-3 px-4 py-2 text-uppercase">
    <h4 class="text-center" ><%= @organization.name %> </h4>
    <div class='control-group' >
    <%= link_to 'Sign In as admin',  new_admin_session_url(subdomain: @organization.subdomain), class:"text-info text-decoration-none" %> | 
    <%= link_to 'Sign In as member',  new_member_session_url(subdomain: @organization.subdomain), class:"text-info text-decoration-none" %>
    </div>
  <% else %>
     <%= link_to 'Create Organization', new_organization_path, class:"text-decoration-none btn btn-info mt-2 fw-bold" %> 
<% end %>
<% end %>
</div>


