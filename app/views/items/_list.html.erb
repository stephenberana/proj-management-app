
<h1>Items</h1>
  <% if @items.empty? %>
   
  <p> No items to display </p>
  <% else %>
<table class="table">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Key</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

     <% @items.map do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= s3_link ActsAsTenant.current_tenant.id, item.key %></td>
        <td><%= link_to '<i class="bi bi-box-arrow-up-left text-info fs-5"></i>'.html_safe,
         item, class: 'btn p-0' %></td>
        <td><%= link_to '<i class="bi bi-trash fs-4 text-danger"></i>'.html_safe,
         item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn p-0' %></td>
      </tr>
  <% end %>
  </tbody>
  </table>
 
  <% end %>



